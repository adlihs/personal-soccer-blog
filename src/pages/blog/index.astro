---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 900px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 4em 1em;
			}
			.blog-header {
				margin-bottom: 4rem;
				text-align: center;
			}
			.blog-header h1 {
				font-size: 3rem;
				margin-bottom: 1rem;
			}
			.post-list {
				display: grid;
				grid-template-columns: 1fr;
				gap: 2.5rem;
				list-style-type: none;
				padding: 0;
				margin: 0;
			}
			.post-item {
				transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275), box-shadow 0.3s ease;
			}
			.post-item:hover {
				transform: scale(1.02) translateY(-4px);
				box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
			}
			.post-item a {
				display: grid;
				grid-template-columns: 350px 1fr;
				text-decoration: none;
				color: inherit;
				overflow: hidden;
				border-radius: 20px;
			}
			.post-item img {
				width: 100%;
				height: 260px;
				object-fit: cover;
				object-position: center;
				transition: transform 0.5s ease;
				background: var(--surface);
			}
			.post-item:hover img {
				transform: scale(1.05);
			}
			.post-content {
				padding: 2.5rem;
				display: flex;
				flex-direction: column;
				justify-content: center;
			}
			.post-content h4 {
				margin-bottom: 0.75rem;
				font-size: 1.75rem;
				line-height: 1.3;
				color: var(--text-primary);
				transition: color 0.2s ease;
			}
			.post-item:hover .post-content h4 {
				color: var(--primary);
			}
			.post-date {
				font-size: 0.9rem;
				color: var(--text-secondary);
				display: flex;
				align-items: center;
				gap: 0.6rem;
			}
			.post-date::before {
				content: '●';
				color: var(--primary);
				font-size: 0.5rem;
			}
			@media (max-width: 850px) {
				.post-item a {
					grid-template-columns: 1fr;
				}
				.post-item img {
					height: 220px;
				}
				.post-content {
					padding: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="blog-header animate-fade-up">
				<h1 class="technical">Todos los Análisis</h1>
				<p>Explora nuestra biblioteca completa de táctica, estrategia y evolución del fútbol.</p>
			</section>
			<section>
				<ul class="post-list">
					{
						posts.map((post, index) => (
							<li class="post-item glass animate-fade-up" style={`animation-delay: ${index * 0.1}s`}>
								<a href={`/blog/${post.id}/`}>
									<img src={post.data.heroImage} alt="" />
									<div class="post-content">
										<h4 class="title">{post.data.title}</h4>
										<span class="post-date technical">
											<FormattedDate date={post.data.pubDate} />
										</span>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
