---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="glass sticky-header">
	<nav>
		<h2>
			<a href="/" class="logo-link">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="logo-icon"><circle cx="12" cy="12" r="10"></circle><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"></path><path d="M2 12h20"></path></svg>
				{SITE_TITLE}
			</a>
		</h2>
		<div class="internal-links technical">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/blog">Análisis</HeaderLink>
			<HeaderLink href="/about">Sobre Mí</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/withastro/astro" target="_blank">
				<span class="sr-only">GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path></svg>
			</a>
		</div>
	</nav>
</header>
<style>
	.sticky-header {
		position: sticky;
		top: 1rem;
		z-index: 100;
		margin: 0 1rem;
		padding: 0 1.5rem;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 4rem;
	}
	.logo-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		color: var(--text-primary);
		text-decoration: none;
		font-size: 1.25rem;
	}
	.logo-icon {
		color: var(--primary);
	}
	.internal-links {
		display: flex;
		gap: 1.5rem;
	}
	.internal-links a {
		padding: 0.5rem 0;
		color: var(--text-secondary);
		border-bottom: 2px solid transparent;
		transition: all 0.2s ease;
	}
	.internal-links a:hover, .internal-links a.active {
		color: var(--primary);
		border-bottom-color: var(--primary);
	}
	.social-links a {
		color: var(--text-secondary);
		transition: color 0.2s ease;
	}
	.social-links a:hover {
		color: var(--text-primary);
	}
	@media (max-width: 720px) {
		.social-links { display: none; }
		.internal-links { gap: 1rem; }
	}
</style>
